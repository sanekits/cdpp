{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Labservable demo setup script",
            "type": "shell",
            "args": [
                "-c",
                "make -d -f /workspace/Makefile env.setup"
            ],
            "options": {},
            "command": "/bin/bash",
            "group": {
                "kind": "none"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}
