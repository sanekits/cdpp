    "version": "0.2.0",
    "configurations": [
        { // Lookup a dir with ambiguity
            "name": "git-bash cdpp test 1",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tox_core.py",
            "console": "integratedTerminal",
            "cwd": "c:\\Projects\\cdpp",
            "env": {
                "TOXHOME": "${workspaceFolder}/bin"
            },
            "args": [
                "b"
            ],
            "justMyCode": true
        },
        { // Add a dir to the index
            "name": "git-bash cdpp test 2",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tox_core.py",
            "console": "integratedTerminal",
            "cwd": "c:\\Program Files\\git\\bin",
            "env": {
                "TOXHOME": "${workspaceFolder}/bin"
            },
            "args": [
                "--add-dir"
            ],
            "justMyCode": true
        },
        { // Remove a dir from the index
            "name": "git-bash cdpp test 3",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tox_core.py",
            "console": "integratedTerminal",
            "cwd": "c:\\Program Files\\git\\bin",
            "env": {
                "TOXHOME": "${workspaceFolder}/bin"
            },
            "args": [
                "--del-dir"
            ],
            "justMyCode": true
        },
        { // Find non-existent dir starting at root
            "name": "git-bash cdpp test 4",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tox_core.py",
            "console": "integratedTerminal",
            "cwd": "/",
            "env": {
                "TOXHOME": "${workspaceFolder}/bin"
            },
            "args": [
                "this-dir-dont-exist"
            ],
            "justMyCode": true
        },
        { // Add cdpp
            "name": "git-bash cdpp test 5",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tox_core.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "TOXHOME": "${workspaceFolder}/bin"
            },
            "args": [
                "--add-dir",
                "${workspaceFolder}"
            ],
            "justMyCode": true
        },
        { /* locate relative dir from local-index
            i.e. if 'cdpp' is in the local index, we should correctly
            fetch its full path when invoked from a child of the index root
         */
            "name": "git-bash cdpp test 6",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tox_core.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "TOXHOME": "${workspaceFolder}/bin"
            },
            "args": [
                "pp"
            ],
            "justMyCode": true
        },
        { // Preserve root index.  If ~/.tox-index exists, don't overwrite it
            "name": "git-bash cdpp test 7",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tox_core.py",
            "console": "integratedTerminal",
            "cwd": "${env:HOME}/Roaming/Code/User",
            "env": {
                "TOXHOME": "${workspaceFolder}/bin"
            },
            "args": [
                "foo"
            ],
            "justMyCode": true
        },
        { // Query a subindex
            "name": "git-bash cdpp test 8",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tox_core.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "TOXHOME": "${workspaceFolder}/bin"
            },
            "args": [
                "-q"
            ],
            "justMyCode": true
        },
        { // Search non-existent dir
            "name": "git-bash cdpp test 9",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tox_core.py",
            "console": "integratedTerminal",
            "cwd": "${env:HOME}",
            "env": {
                "TOXHOME": "${workspaceFolder}/bin"
            },
            "args": [
                "pixv"
            ],
            "justMyCode": true
        },
        {
            "name": "tox_core invoke",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tox_core.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/test/a/ab",
            "args": [
                "-a"
            ],
            "justMyCode": true
        }
    ]
}
