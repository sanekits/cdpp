    "version": "0.2.0",
    "configurations": [
        { // Lookup a dir with ambiguity
            "name": "git-bash cdpp test 1",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tox_core.py",
            "console": "integratedTerminal",
            "cwd": "c:\\Projects\\cdpp",
            "env": {
                "TOXHOME": "${workspaceFolder}/bin"
            },
            "args": [
                "b"
            ],
            "justMyCode": true
        },
        { // Add a dir to the index
            "name": "git-bash cdpp test 2",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tox_core.py",
            "console": "integratedTerminal",
            "cwd": "c:\\Program Files\\git\\bin",
            "env": {
                "TOXHOME": "${workspaceFolder}/bin"
            },
            "args": [
                "--add-dir"
            ],
            "justMyCode": true
        },
        { // Remove a dir from the index
            "name": "git-bash cdpp test 3",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tox_core.py",
            "console": "integratedTerminal",
            "cwd": "c:\\Program Files\\git\\bin",
            "env": {
                "TOXHOME": "${workspaceFolder}/bin"
            },
            "args": [
                "--del-dir"
            ],
            "justMyCode": true
        },
        { // Find non-existent dir starting at root
            "name": "git-bash cdpp test 4",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tox_core.py",
            "console": "integratedTerminal",
            "cwd": "/",
            "env": {
                "TOXHOME": "${workspaceFolder}/bin"
            },
            "args": [
                "this-dir-dont-exist"
            ],
            "justMyCode": true
        },
        { // Add cdpp
            "name": "git-bash cdpp test 5",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tox_core.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "TOXHOME": "${workspaceFolder}/bin"
            },
            "args": [
                "--add-dir",
                "${workspaceFolder}"
            ],
            "justMyCode": true
        },
        {
            "name": "tox_core invoke",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tox_core.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/test/a/ab",
            "args": [
                "-a"
            ],
            "justMyCode": true
        }
    ]
}
